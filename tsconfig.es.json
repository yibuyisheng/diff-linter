{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./types",
    "declarationMap": false,
    "diagnostics": true,
    "help": true,
    "lib": ["es2015"],
    "locale": "zh-CN",
    "module": "esnext",
    "outDir": "./es",
    "strict": true,
    "target": "esnext",
    "traceResolution": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./test"
  ]
}
